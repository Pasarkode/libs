<div class="row">
  <div class="col-md-3">
    <%= image_tag @book.image_url %>
    <h2>
      <%= @book.title %>
    </h2>

    <p>
      <strong>Description:</strong>
      <%= @book.description %>
    </p>

    <p>
      <strong>Year:</strong>
      <%= @book.year %>
    </p>

    <p>
      <strong>Author:</strong>
      <%= @book.author %>
    </p>

    <p>
      <strong>Publisher:</strong>
      <%= @book.publisher %>
    </p>

    <p>
      <strong>Pages:</strong>
      <%= @book.pages %>
    </p>
    <%= link_to "Write a Review", new_book_review_path(@book), class: "btn btn-primary" %>
  </div>

    <div class="col-md-9">
    <%  if @reviews.blank? %>
      <h3>Belum ada Review untuk Buku ini!</h3>
      <% else %>
      <% @reviews.each do |review| %>
        <div class="star-rating" data-score= <%= review.rating %> ></div>
        <p><%= review.comment %></p>
      <% end %>
    <% end %>
    </div>
  </div>

<%= link_to 'Edit', edit_book_path(@book), class: "btn btn-link" %> |
<%= link_to 'Back', books_path, class: "btn btn-link" %>

<script>
  $('.star-rating').raty({
    path: 'http://res.cloudinary.com/taufan/image/upload/v1470365344/stars',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script>
