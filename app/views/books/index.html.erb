<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <h2>Libs is The Best Rating Books Place</h2>
  <h3>Berikan Kritikan dan Penilaianmu Disini.<br>
      Beberapa masukan dan kritikan akan sangat membantu kami.</h3>
</div>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Year</th>
      <th>Author</th>
      <th>Publisher</th>
      <th>Pages</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.description %></td>
        <td><%= book.year %></td>
        <td><%= book.author %></td>
        <td><%= book.publisher %></td>
        <td><%= book.pages %></td>
        <td><%= link_to 'Show', book, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_book_path(book), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path, class: "btn btn-link" %>
