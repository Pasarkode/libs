<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <h2>Libs is The Best Rating Books Place</h2>
  <h3>Berikan Kritikan dan Penilaianmu Disini.<br>
      Beberapa Ulasan dan Kritikan akan sangat membantu kami.</h3>
</div>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Year</th>
      <th>Author</th>
      <th>Publisher</th>
      <th>Pages</th>
      <% if user_signed_in? && current_user.admin? %>
        <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book %></td>
        <td><%= book.description %></td>
        <td><%= book.year %></td>
        <td><%= book.author %></td>
        <td><%= book.publisher %></td>
        <td><%= book.pages %></td>
        <% if user_signed_in? && current_user.admin? %>
          <td><%= link_to 'Edit', edit_book_path(book), class: "btn btn-link" %></td>
          <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? && current_user.admin? %>
  <%= link_to 'New Book', new_book_path, class: "btn btn-link" %>
<% end %>
